<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="176">

            <TextView
                android:id="@+id/home_text1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="검색하기"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/search_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:hint="차량을 검색해보세요. (Ex 벤츠)"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/search_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/btn_normal"
                    android:text="검색" />
            </LinearLayout>

            <!--            19-->

            <TextView
                android:id="@+id/home_text3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="세부검색"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_gosearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:background="@drawable/btn_normal"
                android:text="차량 세부 검색하기" />

            <TextView
                android:id="@+id/home_text2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="가장 많이 조회 된 차량"
                android:textSize="20sp" />

<!--            48-->

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="60">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/car1"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_image1"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/a" />

                        <TextView
                            android:id="@+id/main_text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/a"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/car2"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_image2"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/b" />

                        <TextView
                            android:id="@+id/main_text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/b"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/car3"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_image3"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/c" />

                        <TextView
                            android:id="@+id/main_text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/car4"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_image4"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/d" />

                        <TextView
                            android:id="@+id/main_text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!--            108-->

            <TextView
                android:id="@+id/sites"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:text="중고차 사이트 바로가기"
                android:textSize="20sp" />

            <!--            116-->

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/h_encar" />

                <Button
                    android:background="@drawable/btn_normal"
                    android:id="@+id/home_encar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="엔카 바로가기" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/h_kb" />

                <Button
                    android:background="@drawable/btn_normal"
                    android:id="@+id/home_kb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="KB차차차 바로가기" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/h_kcar" />

                <Button
                    android:background="@drawable/btn_normal"
                    android:id="@+id/home_kcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="케이카 바로가기" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/h_bobae" />

                <Button
                    android:background="@drawable/btn_normal"
                    android:id="@+id/home_bobae"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="보배드림 바로가기" />
            </LinearLayout>
            <!--            176-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>