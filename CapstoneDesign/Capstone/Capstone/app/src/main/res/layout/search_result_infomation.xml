<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="110">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_result_infomation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <LinearLayout
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/infomation_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"/>

            <TextView
                android:layout_margin="8dp"
                android:id="@+id/infomation_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="차량이름" />

            <TextView
                android:layout_margin="8dp"
                android:id="@+id/infomation_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연식_KM" />

            <TextView
                android:layout_margin="8dp"
                android:id="@+id/infomation_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격" />

            <TextView
                android:gravity="center"
                android:id="@+id/infomation_4"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="세부 정보" />

            <TableLayout
                android:weightSum="12"
                android:layout_weight="60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TableRow
                    android:layout_weight = "1"
                    android:background="@color/margin_color"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <TextView
                        android:id="@+id/nouse1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="#BDBDBD"
                        android:gravity="center"
                        android:text="제조사"
                        android:padding="5dp"/>

                    <TextView
                        android:background="@color/white_sri"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:id="@+id/use1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="5dp"/>

                </TableRow>

                <TableRow
                    android:layout_weight = "1"
                    android:background="@color/margin_color"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/nouse2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1sp"
