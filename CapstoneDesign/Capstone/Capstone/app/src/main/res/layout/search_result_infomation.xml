                </TableRow>

                <TableRow
                    android:layout_weight = "1"
                    android:background="@color/margin_color"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/nouse12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="#BDBDBD"
                        android:gravity="center"
                        android:text="배기량" />
                    <TextView
                        android:padding="5dp"
                        android:background="@color/white_sri"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:id="@+id/use12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/btn_normal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/search_result_infomation_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사이트 바로가기" />

        <Button
            android:background="@drawable/btn_normal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/search_result_infomation_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다른 매물과 비교하기" />
